<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorYellowBase"
    tools:context=".ui.RegisterActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/backiconarrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:text="Đăng ký"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:background="@drawable/linearlayoutbackgroud"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="20dp"
            android:background="@drawable/loginlayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etUsername"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="Tên đăng nhập"
                android:textColor="@color/black"
                android:background="@drawable/layout_edittext" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mật khẩu"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:background="@drawable/layout_edittext"
                android:id="@+id/etPassword"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:hint="Mật khẩu"
                android:inputType="textPassword" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etEmail"
                android:background="@drawable/layout_edittext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Email"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:textSize="20sp"
                android:inputType="textEmailAddress" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:paddingLeft="20dp"
                android:singleLine="true"
                android:background="@drawable/layout_edittext"
                android:hint="Họ và tên" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:hint="Số điện thoại"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:background="@drawable/layout_edittext"
                android:inputType="phone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:paddingLeft="20dp"
                android:background="@drawable/layout_edittext"
                android:hint="Địa chỉ" />

            <TextView
                android:layout_width="280dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Tiếp tục đồng nghĩa với việc bạn chấp nhận Điều khoản sử dụng và Chính sách bảo mật." />

            <Button
                android:layout_marginTop="15dp"
                android:id="@+id/btnRegister"
                android:layout_width="207dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:backgroundTint="@color/colorOrangeBase"
                android:text="Đăng ký" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hoặc đăng ký bằng"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/google"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/facebook"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vantay" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>