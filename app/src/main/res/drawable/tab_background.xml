<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected tab -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorOrangeBase" /> <!-- màu nền khi được chọn -->
            <corners android:radius="50dp" /> <!-- bo tròn góc -->
        </shape>
    </item>

    <!-- Unselected tab -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFF3E0" /> <!-- màu nền khi không được chọn -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>
